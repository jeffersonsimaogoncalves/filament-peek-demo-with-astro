---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog index">
    <main>
        <div class="relative min-h-[200px] flex items-center justify-center bg-gray-100">
            <div class="relative z-1 p-2 text-4xl text-gray-700 lg:text-6xl">
                <h1>All Posts</h1>
            </div>
        </div>

        <!-- @todo: dynamic page -->
        <div class="max-w-wide mx-auto p-2">
            <div class="mt-8 flex flex-col gap-4 lg:items-center lg:flex-row">
                <div>
                    <select
                        name="category"
                        id="category_input"
                        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-700 focus:ring-green-700 sm:text-sm"
                    >
                        <option value="">All categories</option>
                        <option value="animals">Animals</option>
                        <option value="mountains">Mountains</option>
                        <option value="people">People</option>
                        <option value="things">Things</option>
                    </select>
                </div>

                <div>
                    <select
                        name="order"
                        id="order_input"
                        class="block w-full rounded-md border-gray-300 shadow-sm focus:border-green-700 focus:ring-green-700 sm:text-sm"
                    >
                        <option value="date_desc">Show most recent</option>
                        <option value="date_asc">Show least recent</option>
                    </select>
                </div>

                <div class="lg:ml-auto">Found 28 posts</div>
            </div>

            <div>
                <div class="mt-16 grid gap-16 grid-cols-1 lg:grid-cols-2">
                    <div>
                        <a class="block text-black" href="/blog-post">
                            <img
                                class="h-[200px] w-full object-cover object-center bg-gray-100"
                                src="https://picsum.photos/id/353/800/600"
                                alt=""
                                loading="lazy"
                            />
                            <h2 class="mt-3 text-xl">Porro placeat architecto quia et</h2>
                        </a>
                        <div class="mt-1">
                            Published on Aug 26th, 2023 — in <a href="/blog?category=mountains">Mountains</a>
                        </div>
                    </div>
                    <div>
                        <a class="block text-black" href="/blog-post">
                            <img
                                class="h-[200px] w-full object-cover object-center bg-gray-100"
                                src="https://picsum.photos/id/342/800/600"
                                alt=""
                                loading="lazy"
                            />
                            <h2 class="mt-3 text-xl">
                                Necessitatibus vel soluta atque explicabo architecto commodi enim
                            </h2>
                        </a>
                        <div class="mt-1">
                            Published on Aug 25th, 2023 — in <a href="/blog?category=people">People</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-16 flex justify-center">
                <button
                    type="submit"
                    class="inline-flex justify-center rounded-md border border-transparent bg-green-700 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-700 focus:ring-offset-2"
                >
                    Load more
                </button>
            </div>
        </div>
    </main>
</Layout>
